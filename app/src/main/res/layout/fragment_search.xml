<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="userInfo"
            type="com.lookie.dongjunekim.fbl_login_fb.UserInfo" />
    </data>

    <FrameLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lookie.dongjunekim.fbl_login_fb.SearchFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="200"></LinearLayout>

            <TextView
                android:id="@+id/id_text"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="150"
                android:gravity="center"
                android:text="@{userInfo.id}"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="100"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="100"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="10"></LinearLayout>

                <EditText
                    android:id="@+id/search_edit"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:gravity="center"
                    android:hint="search friend id"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/search_btn"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="20" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</layout>